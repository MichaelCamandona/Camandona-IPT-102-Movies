@{
    ViewData["Title"] = "Error";
}

<!DOCTYPE html>
<html>
<head>
    <title>Error - Movie Not Found</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #141414; /* Dark background color like Netflix */
            font-family: Arial, sans-serif;
            color: #fff; /* White text */
        }

        .error-container {
            background-color: #1e1e1e; /* Slightly lighter background color */
            border: 3px solid #ed1c24; /* Vibrant red border color like Netflix */
            border-radius: 8px;
            margin: 100px auto;
            max-width: 450px;
            padding: 25px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .error-title {
            font-size: 2.5rem;
            color: #ed1c24; /* Vibrant red text color like Netflix */
            margin-bottom: 20px;
        }

        .error-message {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

        .back-to-home-button {
            display: inline-block;
            background-color: #ed1c24; /* Vibrant red button background color */
            color: #fff; /* White text */
            font-size: 1.2rem;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .back-to-home-button:hover {
                background-color: #c4181e; /* Darker red on hover */
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="error-container">
            <h1 class="error-title">Oops! Movie Not Found</h1>
            <p class="error-message">We couldn't find the movie you were looking for.</p>
            <p><a asp-controller="Home" asp-action="Index" class="btn btn-primary back-to-home-button">Back to Home</a></p>
        </div>
    </div>
</body>
</html>